@model LibraryWeb.Models.CartSummaryViewModel

@{
    ViewData["Title"] = "My Cart";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-shopping-cart text-white text-xl"></i>
            </div>
            <div>
                <h1 class="text-3xl font-light text-gray-900">My Cart</h1>
                <p class="text-gray-600">Review your selected books before ordering</p>
            </div>
        </div>
    </div>

    <!-- Notification -->
    @if (TempData["NotificationMessage"] != null)
    {
        <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 mb-6 flex items-center" id="notificationMessage">
            <i class="fas fa-info-circle mr-3"></i>
            <span>@TempData["NotificationMessage"]</span>
        </div>

        <script>
            setTimeout(() => {
                const msg = document.getElementById('notificationMessage');
                if (msg) {
                    msg.style.transition = 'opacity 0.5s ease-out';
                    msg.style.opacity = '0';
                    setTimeout(() => msg.remove(), 500);
                }
            }, 3000);
        </script>
    }

    @if (Model.Items == null || !Model.Items.Any())
    {
        <!-- Empty Cart -->
        <div class="text-center py-16">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-shopping-cart text-gray-400 text-3xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Your cart is empty</h3>
            <p class="text-gray-600 mb-6">Looks like you haven't added any books to your cart yet.</p>
            <a href="@Url.Action("BrowseBooks", "Home")" 
               class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">
                <i class="fas fa-book mr-2"></i>
                Browse Books
            </a>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Cart Items (@Model.Items.Count())</h2>
                    </div>
                    
                    <div class="divide-y divide-gray-200">
                        @foreach (var item in Model.Items)
                        {
                            <div class="p-6 hover:bg-gray-50 transition-colors duration-200">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-medium text-gray-900 mb-1">@item.Title</h3>
                                        <p class="text-gray-600 mb-2">by @item.Author</p>
                                        
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            <span class="flex items-center">
                                                <i class="fas fa-tag mr-1"></i>
                                                Qty: @item.Quantity
                                            </span>
                                            <span class="flex items-center">
                                                <i class="fas fa-dollar-sign mr-1"></i>
                                                $@item.Price each
                                            </span>
                                            @if (item.Discount > 0)
                                            {
                                                <span class="flex items-center text-green-600">
                                                    <i class="fas fa-percentage mr-1"></i>
                                                    @(item.Discount * 100)% off
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center space-x-4 ml-4">
                                        <div class="text-right">
                                            <p class="text-lg font-semibold text-gray-900">$@(item.Price * item.Quantity)</p>
                                            <p class="text-sm text-gray-500">Subtotal</p>
                                        </div>
                                        
                                        <form method="post" asp-action="RemoveFromCart" class="ml-4">
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <button type="submit" 
                                                    class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200 group"
                                                    title="Remove from cart">
                                                <i class="fas fa-trash group-hover:scale-110 transition-transform"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 sticky top-8">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Order Summary</h2>
                    </div>
                    
                    <div class="p-6 space-y-4">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span class="font-medium">$@Model.Subtotal.ToString("0.00")</span>
                        </div>
                        
                        @if (Model.Discount > 0)
                        {
                            <div class="flex justify-between text-green-600">
                                <span>Discount</span>
                                <span class="font-medium">-$@Model.Discount.ToString("0.00")</span>
                            </div>
                            
                            @if (Model.AppliedDiscount.Any())
                            {
                                <div class="bg-green-50 rounded-lg p-3">
                                    <h4 class="text-sm font-medium text-green-800 mb-2">Applied Discounts:</h4>
                                    <ul class="text-xs text-green-700 space-y-1">
                                        @foreach (var discountLabel in Model.AppliedDiscount)
                                        {
                                            <li class="flex items-center">
                                                <i class="fas fa-check mr-2"></i>
                                                @discountLabel
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        }
                        
                        <hr class="border-gray-200">
                        
                        <div class="flex justify-between text-lg font-semibold">
                            <span>Total</span>
                            <span class="text-blue-600">$@Model.Total.ToString("0.00")</span>
                        </div>
                        
                        <form method="post" asp-action="PlaceOrder" class="mt-6">
                            <button type="submit" 
                                    class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium flex items-center justify-center">
                                <i class="fas fa-credit-card mr-2"></i>
                                Place Order
                            </button>
                        </form>
                        
                        <div class="text-center mt-4">
                            <a href="@Url.Action("BrowseBooks", "Home")" 
                               class="text-blue-600 hover:text-blue-700 text-sm font-medium inline-flex items-center">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
