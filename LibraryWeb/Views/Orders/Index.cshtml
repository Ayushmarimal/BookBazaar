@model List<LibraryWeb.Models.OrderViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-emerald-600 rounded-lg flex items-center justify-center mr-4">
                <i class="fas fa-receipt text-white text-xl"></i>
            </div>
            <div>
                <h1 class="text-3xl font-light text-gray-900">My Orders</h1>
                <p class="text-gray-600">Track your book orders and pickup details</p>
            </div>
        </div>
    </div>

    <!-- Notification -->
    @if (TempData["NotificationMessage"] != null)
    {
        <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 rounded-lg p-4 mb-6 flex items-center" id="notificationMessage">
            <i class="fas fa-info-circle mr-3"></i>
            <span>@TempData["NotificationMessage"]</span>
        </div>

        <script>
            setTimeout(() => {
                const msg = document.getElementById('notificationMessage');
                if (msg) {
                    msg.style.transition = 'opacity 0.5s ease-out';
                    msg.style.opacity = '0';
                    setTimeout(() => msg.remove(), 500);
                }
            }, 2000);
        </script>
    }

    @if (!Model.Any())
    {
        <!-- Empty Orders -->
        <div class="text-center py-16">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-receipt text-gray-400 text-3xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No orders yet</h3>
            <p class="text-gray-600 mb-6">You haven't placed any orders yet. Start shopping to see your orders here.</p>
            <a href="@Url.Action("BrowseBooks", "Home")" 
               class="inline-flex items-center px-6 py-3 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors duration-200">
                <i class="fas fa-book mr-2"></i>
                Browse Books
            </a>
        </div>
    }
    else
    {
        <!-- Orders Count -->
        <div class="mb-6">
            <p class="text-gray-600">
                <i class="fas fa-receipt mr-2 text-emerald-600"></i>
                You have <span class="font-semibold text-emerald-600">@Model.Count</span> orders
            </p>
        </div>

        <!-- Orders List -->
        <div class="space-y-6">
            @foreach (var order in Model)
            {
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <!-- Order Header -->
                    <div class="bg-gradient-to-r from-emerald-50 to-blue-50 p-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-6">
                                <div>
                                    <div class="flex items-center mb-1">
                                        <i class="fas fa-shopping-bag text-emerald-600 mr-2"></i>
                                        <span class="text-lg font-semibold text-gray-900">Order #@order.Id</span>
                                    </div>
                                    <p class="text-sm text-gray-600">
                                        <i class="fas fa-calendar mr-1"></i>
                                        Placed on @order.OrderDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                                
                                <div class="bg-white rounded-lg p-3 border border-emerald-200">
                                    <div class="text-center">
                                        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Claim Code</p>
                                        <p class="text-lg font-bold text-emerald-600">@order.ClaimCode</p>
                                    </div>
                                </div>
                                
                                <div class="text-right">
                                    <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Total</p>
                                    <p class="text-2xl font-bold text-gray-900">$@order.TotalAmount.ToString("0.00")</p>
                                </div>
                            </div>
                            
                            <form method="post" asp-action="RemoveFromOrders">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <button type="submit" 
                                        class="px-4 py-2 bg-red-50 text-red-600 border border-red-200 rounded-lg hover:bg-red-100 transition-colors duration-200 flex items-center font-medium">
                                    <i class="fas fa-times mr-2"></i>
                                    Cancel Order
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="p-6">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-list mr-2 text-gray-600"></i>
                            Order Items (@order.Items.Count())
                        </h4>
                        
                        <div class="overflow-hidden border border-gray-200 rounded-lg">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Book</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var item in order.Items)
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                                                        <i class="fas fa-book text-blue-600"></i>
                                                    </div>
                                                    <div>
                                                        <p class="text-sm font-medium text-gray-900">@item.Title</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    @item.Quantity
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                $@item.UnitPrice.ToString("0.00")
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                $@((item.Quantity * item.UnitPrice).ToString("0.00"))
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pickup Instructions -->
                        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <div class="flex items-start">
                                <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
                                <div>
                                    <h5 class="text-sm font-semibold text-blue-900 mb-1">Pickup Instructions</h5>
                                    <p class="text-sm text-blue-800">
                                        Present your claim code <span class="font-bold">@order.ClaimCode</span> at the store to collect your books. 
                                        Please bring a valid ID for verification.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Continue Shopping -->
        <div class="text-center mt-12">
            <a href="@Url.Action("BrowseBooks", "Home")" 
               class="inline-flex items-center px-6 py-3 border border-emerald-600 text-emerald-600 rounded-lg hover:bg-emerald-50 transition-colors duration-200">
                <i class="fas fa-search mr-2"></i>
                Continue Shopping
            </a>
        </div>
    }
</div>
