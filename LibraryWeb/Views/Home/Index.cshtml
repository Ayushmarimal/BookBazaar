@{
    ViewData["Title"] = "Home";
    var announcement = ViewBag.PinnedAnnouncement;
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- Announcement Banner -->
        @if (announcement != null)
        {
            <div class="bg-yellow-400 text-yellow-900 rounded-lg p-4 mb-8 shadow-lg">
                <div class="flex items-center justify-center">
                    <i class="fas fa-bullhorn mr-3 text-xl"></i>
                    <div class="font-semibold">
                        <span class="font-bold">@announcement.Title:</span> @announcement.Message
                    </div>
                </div>
            </div>
        }

        <div class="text-center">
            <!-- Logo -->
            <div class="mb-8">
                <img src="~/images/Logo 2.png" alt="BookBazaar Logo" class="h-24 mx-auto" />
            </div>
            
            <!-- Hero Text -->
            <h1 class="text-4xl md:text-6xl font-light mb-6 leading-tight">
                Welcome to <span class="font-bold bg-gradient-to-r from-yellow-400 to-orange-400 bg-clip-text text-transparent">BookBazaar</span>
            </h1>
            <p class="text-xl md:text-2xl font-light max-w-3xl mx-auto mb-8 leading-relaxed opacity-90">
                Discover your next favorite book from our curated collection. Browse, bookmark, and order with ease.
            </p>
            <a href="@Url.Action("BrowseBooks", "Home")" 
               class="inline-flex items-center px-8 py-4 bg-white text-blue-700 rounded-full font-semibold text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
                <i class="fas fa-book-open mr-3"></i>
                Start Exploring
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-4">
                Everything you need for your reading journey
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                From browsing to pickup, we've made book discovery simple and enjoyable
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="group">
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center h-full">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-blue-200 transition-colors">
                        <i class="fas fa-search text-blue-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Smart Search & Filter</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Find exactly what you're looking for with our advanced search by title, author, genre, and more. Filter by availability and price.
                    </p>
                </div>
            </div>

            <div class="group">
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center h-full">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-green-200 transition-colors">
                        <i class="fas fa-shopping-bag text-green-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Easy Order & Pickup</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Add books to your cart and place orders online. Get a confirmation email with your claim code for convenient in-store pickup.
                    </p>
                </div>
            </div>

            <div class="group">
                <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 text-center h-full">
                    <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-purple-200 transition-colors">
                        <i class="fas fa-gift text-purple-600 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Member Rewards</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Enjoy 5% off when ordering 5+ books. After 10 successful orders, unlock an additional 10% discount on future purchases.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-4">
                Explore by Category
            </h2>
            <p class="text-xl text-gray-600">
                Discover books curated for every reader's taste
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="group cursor-pointer">
                <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-6 text-center hover:from-red-100 hover:to-red-200 transition-all duration-300 transform hover:scale-105">
                    <div class="text-4xl mb-4">🔥</div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Bestsellers</h3>
                    <p class="text-gray-600 text-sm">Most popular picks by our readers</p>
                </div>
            </div>

            <div class="group cursor-pointer">
                <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl p-6 text-center hover:from-yellow-100 hover:to-yellow-200 transition-all duration-300 transform hover:scale-105">
                    <div class="text-4xl mb-4">🏆</div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Award Winners</h3>
                    <p class="text-gray-600 text-sm">Critically acclaimed titles</p>
                </div>
            </div>

            <div class="group cursor-pointer">
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 text-center hover:from-green-100 hover:to-green-200 transition-all duration-300 transform hover:scale-105">
                    <div class="text-4xl mb-4">📦</div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">New Arrivals</h3>
                    <p class="text-gray-600 text-sm">Fresh additions to our collection</p>
                </div>
            </div>

            <div class="group cursor-pointer">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 text-center hover:from-blue-100 hover:to-blue-200 transition-all duration-300 transform hover:scale-105">
                    <div class="text-4xl mb-4">⏳</div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Coming Soon</h3>
                    <p class="text-gray-600 text-sm">Preview upcoming releases</p>
                </div>
            </div>
        </div>
    </div>
</div>